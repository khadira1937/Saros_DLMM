{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "noEmit": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "paths": {
      "@/*": ["./*"],
      "@dlmm-copilot/core": ["../../packages/core/src"],
      "@dlmm-copilot/core/*": ["../../packages/core/src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"],
  "references": [
    {
      "path": "../../packages/core"
    }
  ]
}
